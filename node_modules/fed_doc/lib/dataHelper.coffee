fs = require "fs"
path = require "path"
parser = require "./parserHelper"

# Get list of all files under `basePath`
# all item is absoulte path
getDataObj = (tpath)->
	result = []
	tpackage = path.dirname tpath
	list = fs.readdirSync tpath
	for f in list
		file = path.join(tpath, f);
		if fs.lstatSync(file).isDirectory()
			result.push {
				"package": tpackage
				"files": getDataObj file, basePath
				"leaf": false
			}
		else
			routeList = processFile(file);
			result.push {
				package: tpackage
				class: f
				file: file
				leaf: true
				routeList: routeList
			}

	return result

# Process the routes in file
processFile = (file)->
	result = []
	# Include route file, get all definitions
	routes = require file
	for route in routes
		routeFn = routes[route]
		# function string
		fnDef = routeFn.toString()
		# comment info in function
		fnCmt = getCommentStr(fnDef)
		# comment info obj
		tobj = parser.parse(fnCmt, route)

		tobj.fnDef = fnDef
		tobj.fnCmt = fnCmt

	return tobj


# Export fn
exports.getDataObj = getDataObj